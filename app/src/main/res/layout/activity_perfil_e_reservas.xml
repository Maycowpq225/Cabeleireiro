<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente_activity_calendario"
    tools:context=".Po.PerfilEReservasActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="1000dp">

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="601dp"
            android:layout_height="141dp"
            android:src="@color/corPink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_wallpaper_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewNomePerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text=""
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="normal"
            app:fontFamily="sans-serif-condensed-medium"
            app:layout_constraintBottom_toBottomOf="@+id/imageView17"
            app:layout_constraintStart_toEndOf="@+id/imageView17"
            app:layout_constraintTop_toTopOf="@+id/imageView17" />

        <TextView
            android:id="@+id/textViewMinhasReservas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/MinhasReservas"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="normal"
            app:fontFamily="sans-serif-condensed-medium"
            app:layout_constraintStart_toStartOf="@+id/imageView17"
            app:layout_constraintTop_toBottomOf="@+id/imageView18" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/containerreserva"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewMinhasReservas" />

        <TextView
            android:id="@+id/servico_editar_perfil_reservas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/Servicos"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:fontFamily="More Fonts..."
            app:layout_constraintStart_toStartOf="@+id/imageView21"
            app:layout_constraintTop_toTopOf="@+id/imageView21"></TextView>

        <TextView
            android:id="@+id/servico2_editar_perfil_reservas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/Servicos"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:fontFamily="More Fonts..."
            app:layout_constraintStart_toStartOf="@+id/imageView21"
            app:layout_constraintTop_toBottomOf="@+id/servico_editar_perfil_reservas"></TextView>

        <TextView
            android:id="@+id/dia_reserva_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:text="@string/Dia"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/corPink"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:fontFamily="More Fonts..."
            app:layout_constraintStart_toStartOf="@+id/imageView21"
            app:layout_constraintTop_toBottomOf="@+id/servico_editar_perfil_reservas"></TextView>

        <TextView
            android:id="@+id/dia_marcado_reserva_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text=""
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:fontFamily="More Fonts..."
            app:layout_constraintBottom_toBottomOf="@+id/dia_reserva_perfil"
            app:layout_constraintStart_toEndOf="@+id/dia_reserva_perfil"
            app:layout_constraintTop_toTopOf="@+id/dia_reserva_perfil"></TextView>

        <TextView
            android:id="@+id/horario_reserva_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/Horario"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/corPink"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:fontFamily="More Fonts..."
            app:layout_constraintStart_toStartOf="@+id/imageView21"
            app:layout_constraintTop_toBottomOf="@+id/dia_reserva_perfil"></TextView>

        <TextView
            android:id="@+id/horario_marcado_reserva_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text=""
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:fontFamily="More Fonts..."
            app:layout_constraintBottom_toBottomOf="@+id/horario_reserva_perfil"
            app:layout_constraintStart_toEndOf="@+id/horario_reserva_perfil"
            app:layout_constraintTop_toTopOf="@+id/horario_reserva_perfil"></TextView>

        <TextView
            android:id="@+id/preco_reserva_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="148dp"
            android:text="@string/preco"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/corPink"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:fontFamily="More Fonts..."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView21"></TextView>

        <TextView
            android:id="@+id/preco_marcado_reserva_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text=""
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:fontFamily="More Fonts..."
            app:layout_constraintBottom_toBottomOf="@+id/preco_reserva_perfil"
            app:layout_constraintStart_toEndOf="@+id/preco_reserva_perfil"
            app:layout_constraintTop_toTopOf="@+id/preco_reserva_perfil"></TextView>

        <TextView
            android:id="@+id/cancelar_reserva_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="20dp"
            android:text="@string/Cancelar"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="normal"
            app:fontFamily="More Fonts..."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>